<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic">
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="Risks"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="risksTable"
                width="auto"
                items="{
                    path: '/Risks',
                    sorter: {
                        path: 'title',
                        descending: false
                    } 
                }"
                noDataText="{viewModel>/noDataText}"
                busyIndicatorDelay="{viewModel>/delay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="Worklist Table Title"
                            level="H3"/>
                        <ToolbarSpacer />
						<Button
							tooltip="Add Risk"
							icon="sap-icon://add"
							press=".onOpenRiskDialog"/>
                        <!-- <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField> -->
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
					<Column id="TitleColumn">
                        <Text text="Title" />
                    </Column>
                    <Column >
                        <Text text="Description"/>
                    </Column>
					<Column id="CreateByColumn" visible="false">
                        <Text text="Created By"/>
                    </Column>
                </columns>

                <items>
					<ColumnListItem >
                    <!-- <ColumnListItem
                    	type="Navigation"
                        press=".onPress"> -->
                        <cells>
                            <ObjectIdentifier
                                text="{title}" />
							<Text
                                text="{descr}" />
							<Text
                                text="{createdBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

    </semantic:SemanticPage>
</core:FragmentDefinition>